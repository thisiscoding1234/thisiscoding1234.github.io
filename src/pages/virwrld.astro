---
const tickMarks = Array.from({ length: 60 }, (_, i) => i);
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>main Clock</title>
    <style>
      body {
        margin: 0;
        height: 100vh;
        background: radial-gradient(circle at 30% 30%, #4a2b0c, #000 60%);
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .main-clock {
        position: relative;
        width: 256px;
        aspect-ratio: 1/1;
        border: 2px solid #fff;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.7);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
        overflow: hidden;
        padding: 30px;
      }
      .main-clock::before {
        content: "";
        position: absolute;
        top: 0;
        left: 52px;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: radial-gradient(circle at 0%, transparent 0%, transparent 60%, #eee 75%, transparent 75%);
        pointer-events: none;
      }
      .clock-face {
        position: relative;
        width: 100%;
        height: 100%;
      }
      .tick {
        position: absolute;
        left: 50%;
        top: 50%;
        width: 2px;
        height: 15px;
        background: #fff;
        transform-origin: center;
        display: none;
      }
      .hour-tick {
        width: 4px;
        height: 25px;
        display: block;
      }
      .hand {
        position: absolute;
        bottom: 50%;
        left: 50%;
        transform-origin: bottom;
        transform: translate(-50%, 0) rotate(0deg);
      }
      .hour {
        width: 6px;
        height: 30%;
        background: #fff;
      }
      .minute {
        width: 4px;
        height: 40%;
        background: #fff;
  
      }
      .second {
        width: 2px;
        height: 45%;
        background: red;
      }
      .center-dot {
        position: absolute;
        width: 50px;
        aspect-ratio: 1/1;
        border-color: #fff;
        border-style: solid;
        border-width: 2px:
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      }
      .main-label {
        position: absolute;
        bottom: -40px;
        left: 50%;
        transform: translateX(-50%);
        font-family: Arial, sans-serif;
        color: white;
        font-size: 24px;
        letter-spacing: 4px;
      }
      html,
      body {
        margin: 0;
        padding: 0;
        height: 100%;
        background: #000;
        overflow: hidden;
      }
      body {
        position: relative;
      }
      body::before {
        content: "";
        position: absolute;
        inset: 0;
        background: conic-gradient(
          from 180deg,
          #d16622 0%,
          #000 20%,
          #d16622 40%,
          #000 60%,
          #d16622 80%,
          #000 100%
        );
        animation: swirl 25s linear infinite;
        mix-blend-mode: screen;
        opacity: 0.6;
      }
      @keyframes swirl {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body>
    <div class="main-clock">
      <div class="clock-face">
        {
          tickMarks.map((i) => (
            <div
              class={`tick ${i % 5 === 0 ? "hour-tick" : ""}`}
              style={`transform: translate(-50%, -50%) rotate(${i * 6}deg) translateY(-145px)`}
            />
          ))
        }
        <div class="hand hour"></div>
        <div class="hand minute"></div>
        <div class="hand second"></div>
        <div class="center-dot"></div>
      </div>
      <div class="main-label">main</div>
    </div>
    <script>
    setInterval(() => {
        const now = new Date();
        const secondsRatio = now.getSeconds() / 60;
        const minutesRatio = (secondsRatio + now.getMinutes()) / 60;
        const hoursRatio = (minutesRatio + now.getHours()) / 12;
        document.querySelector(".second").style.transform =
          `translate(-50%, 0) rotate(${secondsRatio * 360}deg)`;
        document.querySelector(".minute").style.transform =
          `translate(-50%, 0) rotate(${minutesRatio * 360}deg)`;
        document.querySelector(".hour").style.transform =
          `translate(-50%, 0) rotate(${hoursRatio * 360}deg)`;
    }, 1000);
    </script>
    </body>
</html>
